<ul>
<% for (var i=0;i<allpost.length;i++ ){ %>
<li>
	<a href= "/posts/<%= i %>"><%= allpost[i].title %></a>
	<a href= "/posts/<%= i %>/edit" > EDIT </a>
	<form method = "post" action="/posts/<%= i %>?_method=DELETE" >
